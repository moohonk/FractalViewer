<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <GridLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/gridLayout"
        android:columnCount="8"
        android:rowCount="4"
        android:layout_below="@+id/debug"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/t1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2"
            android:id="@+id/t2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3"
            android:id="@+id/t3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="4"
            android:id="@+id/t4"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5"
            android:id="@+id/t5"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="6"
            android:id="@+id/t6"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="7"
            android:id="@+id/t7"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_gravity="center_horizontal" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
            <!--android:text="7"-->
            <!--android:id="@+id/t7"-->
            <!--android:layout_row="0"-->
            <!--android:layout_column="7" />-->

        <Space
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="1" />

        <Space
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="2" />

        <Space
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="3" />

        <Space
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="4" />

        <Space
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="5" />

        <SeekBar
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/sB1"
            android:layout_row="1"
            android:layout_column="0"
            android:max="7"
            android:indeterminate="false"
            android:rotation="270" />

        <SeekBar
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/sB2"
            android:layout_row="1"
            android:layout_column="1"
            android:max="7"
            android:indeterminate="false"
            android:rotation="270" />

        <SeekBar
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/sB3"
            android:layout_row="1"
            android:layout_column="2"
            android:max="7"
            android:indeterminate="false"
            android:rotation="270" />

        <SeekBar
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/sB4"
            android:layout_row="1"
            android:layout_column="3"
            android:max="7"
            android:indeterminate="false"
            android:rotation="270" />

        <SeekBar
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/sB5"
            android:layout_row="1"
            android:layout_column="4"
            android:max="7"
            android:indeterminate="false"
            android:rotation="270" />

        <SeekBar
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/sB6"
            android:layout_row="1"
            android:layout_column="5"
            android:max="7"
            android:indeterminate="false"
            android:rotation="270" />

        <SeekBar
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/sB7"
            android:layout_row="1"
            android:layout_column="6"
            android:max="7"
            android:indeterminate="false"
            android:rotation="270" />

        <Space
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="0" />

        <Space
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_row="3"
            android:layout_column="6" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Fractal"
        android:id="@+id/ThaButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="fractalGen" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theDepth"
        android:layout_below="@+id/gridLayout"
        android:layout_marginTop="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:max="6"
        android:onClick="changeDepth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Depth: 3"
        android:id="@+id/depthField"
        android:layout_below="@+id/theDepth"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Debug Info"
        android:id="@+id/debug"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/depthField"
        android:layout_toLeftOf="@+id/depthField" />

</RelativeLayout>
